<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
	<div class="modal-dialog modal-dialog-centered" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<h2 class="modal-title" id="exampleModalLongTitle"><%=titulo%></h2>
			</div>

			<%if(locals.edit){%>
			<form id="laboratorioForm" action="/laboratorio/update/<%=locals.l.id%>" method="POST" role="form">
			<%} else {%>
			<form id="laboratorioForm" action="/laboratorio/create" method="POST" role="form">
				<%}%>
				<div class="modal-body">

					<div class="form-group">
						<label>Nombre</label>
						<input id="nombre" class="form-control" name="nombre" <%if(locals.edit){%> value="<%=locals.l.nombre%>" <%}%>>
					</div>

					<div class="form-group">
						<label>Direccion</label>
						<input id="direccion" class="form-control" name="direccion" <%if(locals.edit){%> value="<%=locals.l.direccion%>" <%}%> >
					</div>

					<div class="form-group">
						<label>Telefono</label>
						<input id="telefono" class="form-control" name="telefono" <%if(locals.edit){%> value="<%=locals.l.telefono%>" <%}%> >
					</div>

				</div>

				<div class="modal-footer">
					<%if(locals.edit){%>
					<a href="/laboratorio" class="btn btn-danger"><b>X</b></a>
					<%} else {%>
					<button type="button" class="btn btn-danger" data-dismiss="modal"><b>X</b></button>
					<%}%>
					<button type="reset" class="btn btn-warning"><i class="fa fa-home"></i></button>
					<button type="submit" class="btn btn-primary"><i class="fa fa-plus"></i></button>
				</div>

			</form>
		</div>
	</div>
</div>